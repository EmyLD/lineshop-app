{% extends 'base.html.twig' %}

{% block title %}Mon Panier
{% endblock %}

{% block header %}{% endblock %}

{% block main %}
<main>
	<div class="container">
		<h1 class="my-4">Mon Panier</h1>
		<table class="table">
			<thead>
				<tr class="text-center">
					<th scope="col">Votre produit</th>
					<th scope="col">Nom du produit</th>
					<th scope="col">Prix de l'article</th>
					<th scope="col">Nombre d'articles</th>
					<th scope="col">Ajouter / Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for item in cart %}
					<tr class="text-center">
						<th scope="row"><img src="{{ asset('picture/' ~ item.article.image) }}" class="imagepanier card-img-top fixed-height" alt="{{ item.article.name }}"></th>
						<td>{{ item.article.name }}</td>
						<td>{{ item.article.price }}€</td>
						<td>{{ item.quantity }}</td>
						<td>
							<a href="{{ path('cart_remove', { id: item.article.id }) }}" class="btn btn-danger btn-sm">-</a>
							<a href="{{ path('cart_add', { id: item.article.id }) }}" class="btn btn-success btn-sm">+</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="total d-flex justify-content-between align-items-center mb-4">
			<h4>Total :</h4>
			<h4>{{ total }}€</h4>
		</div>
		<a href="{{ path('cart_checkout') }}" class="btn btn-primary">Procéder au paiement</a>
	</div>
</main>
{% endblock %}
