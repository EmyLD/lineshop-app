{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Mon Panier</h1>
    <ul class="list-group mb-4">
        {% for articleId, item in cart %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ item.article.getName }} - {{ item.article.getPrice }}€
                <span>
                    <a href="{{ path('cart_remove', { id: articleId }) }}" class="btn btn-danger btn-sm">Retirer</a>
                </span>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('cart_checkout') }}" class="btn btn-primary">Procéder au paiement</a>
</div>
{% endblock %}
