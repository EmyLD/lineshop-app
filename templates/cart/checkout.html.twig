{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Résumé de votre commande</h1>
    <ul class="list-group mb-4">
        {% for articleId, item in cart %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ item.article.getName }} - {{ item.article.getPrice }}€ x {{ item.quantity }}
            </li>
        {% endfor %}
    </ul>
    <p>Total : {{ cart|map(item => item.article.getPrice() * item.quantity)|sum }}€</p>
    <a href="#" class="btn btn-success">Donne l'argent maintenant !</a>
</div>
{% endblock %}