{% extends 'base.html.twig' %} {% block title %}Article index {% endblock %}  {% block header %}{% endblock %} {% block main %}
<main>
<div class="container">
  <div class="row">
    {% for article in articles %}
    <div class="col-lg-4 col-md-6 col-sm-12 mb-5">
      <div class="card" style="width: 18rem">
        <img
          src="{{ asset('picture/' ~ article.image) }}"
          class="card-img-top fixed-height"
          alt="{{ article.name }}"
        />
        <div class="card-body">
          <h5 class="card-title">{{ article.name }}</h5>
          <p class="card-text">{{ article.price }}â‚¬</p>
          <a
            href="{{ path('cart_add', { id: article.id }) }}"
            class="btn btn-success"
            >+</a
          >
        </div>
      </div>
    </div>
    {% else %}
    <div class="col-12">
      <p class="text-center">No records found</p>
    </div>
    {% endfor %}
  </div>
</div>
</main>
 {% endblock %}

