{% block title %}Article index
{% endblock %}

{% block body %}
	<h1>Article index</h1>

	<div class="container">
		<div class="row">
			{% for article in articles %}
				<div class="col-4">

					<div class="card row" style="width: 18rem;">
						<img src="{{ asset('picture/'~ article.id ~'.jpg') }}" class="card-img-top  fixed-height" alt="{{ article.name }}">
						<div class="card-body">
							<h5 class="{{ article.name }}">Card title</h5>
							<p class="card-text">{{ article.price }}â‚¬</p>
							<a href="#" class="btn btn-primary">Go somewhere</a>
						</div>
					</div>
				</div>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</div>
	</div>

{% endblock %}
